<%- include('partials/head') %>
<style>
  select.error {
    border-color: red;
  }
  input.error {
    border-color: red;
  }

  input.error::placeholder {
    color: red;
  }

  textarea.error {
    border-color: red;
  }

  textarea.error::placeholder {
    color: red;
  }
  .error-message {
  color: red;
  font-size: 0.9rem;
}
</style>
<body>
  <div class="screen-overlay"></div>
  <%- include('partials/aside') %>
  <main class="main-wrap">
    <header class="main-header navbar">
      <div class="col-nav">
        <button
          class="btn btn-icon btn-mobile me-auto"
          data-trigger="#offcanvas_aside"
        >
          <i class="material-icons md-apps"></i>
        </button>
      </div>
    </header>
    <section class="content-main">
      <div class="row">
        <div class="col-lg-12">
          <div class="content-header">
            <h2 class="content-title">Edit Product</h2>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-12" id="ProductEdit">
          <div class="card mb-4">
            <div class="card-body">
              <form
                id="ProductEditForm"
                enctype="multipart/form-data" method="PUT" action="/admin/edit_product"
              >
                <div class="row">
                  <div class="col-lg-8">
                    <div class="mb-4">
                      <label for="product_name" class="form-label"
                        >Product title</label
                      >
                      <input
                        name="name"
                        type="text"
                        value="<%= product.name %>"
                        data-original="<%= product.name %>"
                        class="form-control"
                        id="product_name"
                      />
                    </div>
                    <div class="mb-4">
                      <label class="form-label">Full description</label>
                      <textarea
                       style="height: 350px;"
                        name="description"
                        class="form-control"
                        rows="4"
                        id="description"
                        data-original="<%= product.description %>"><%= product.description %></textarea>
                    </div>
                    <div class="row">
                      <div class="col-lg-6">
                        <div class="mb-4">
                          <label class="form-label">Listing price</label>
                          <input
                            name="price"
                            id="price"
                            value="<%= product.price %>"
                            data-original="<%= product.price %>"
                            type="text"
                            class="form-control"
                          />
                        </div>
                      </div>
                      <div class="col-lg-6">
                        <div class="mb-4">
                          <label class="form-label">Regular price</label>
                          <input
                            name="orginal_price"
                            id="orginal_price"
                            value="<%= product.promotional_price %>"
                            data-original="<%= product.promotional_price %>"
                            type="text"
                            class="form-control"
                          />
                        </div>
                      </div>
                      <div class="col-lg-6 mb-4">
                        <label class="form-label">Category</label>
                        <select class="form-select" name="category" id="category" data-original="<%=product.category.name%>"> 
                          <% categories.forEach(function(category) { %>
                          <option value="<%= category._id %>"
                            <% if (category.name === product.category.name) { %> selected <% } %> >
                            <%= category.name %>
                          </option>
                          <% }) %>
                        </select>
                      </div>
                      <div class="col-lg-6 mb-4">
                        <label class="form-label">Brand</label>
                        <select class="form-select" name="brands" id="brands" data-original="<%=product.brand.name%>">
                          <% brands.forEach(function(brands) { %>
                          <option value="<%= brands._id %>" 
                            <% if (brands.name === product.brand.name) { %> selected <% } %> >
                            <%= brands.name %>
                          </option>
                          <% }) %>
                        </select>
                      </div>
                      <div class="col-lg-6">
                        <div class="mb-4">
                          <label class="form-label">Stock</label>
                          <input
                            value="<%= product.stock %>"
                            data-original="<%= product.stock %>"
                            name="stock"
                            id="stock"
                            type="text"
                            class="form-control"
                          />
                        </div>
                      </div>
                      <div class="col-lg-6">
                        <div class="mb-4">
                          <label class="form-label">Highlights</label>
                          <input
                            name="highlights"
                            id="highlights"
                            type="text"
                            class="form-control"
                            value="<%= product.highlights %>"
                            data-original="<%= product.highlights %>"
                          />
                        </div>
                      </div>
                      <input
                        name="id"
                        type="text"
                        hidden="true"
                        value="<%= product._id %>"
                      />
                    </div>
                  </div>
                  <div class="col-lg-4">
                    <div class="card mb-4">
                      <div class="card-header">
                        <h4>Media</h4>
                      </div>
                      <% if(product.images.length <= 0) {%>
                        <div class="card-body">
                          <div class="input-upload text-center">
                            <input
                              id="imageInput1"
                              name="product_images"
                              class="form-control"
                              type="file"
                              accept="image/*"
                              multiple
                            />
                          </div>
                        </div>
                        <div class="card-body">
                          <div class="input-upload text-center">
                            <input
                              id="imageInput2"
                              name="product_images"
                              class="form-control"
                              type="file"
                              accept="image/*"
                              multiple
                            />
                          </div>
                        </div>
                        <div class="card-body">
                          <div class="input-upload text-center">
                            <input
                              id="imageInput3"
                              name="product_images"
                              class="form-control"
                              type="file"
                              accept="image/*"
                              multiple
                            />
                          </div>
                        </div>
                        <%} else {%>
                      <% for (let i = 0; i < product.images.length; i++) { %>
                        <div class="card-body" id="image-container-<%= i %>">
                          <button onclick="removeImgae(`<%= product.images[i] %>`,`<%= product._id %>`)" class="btn" type="button">
                            <i class="fa-solid fa-trash" style="color: #9e9e9e;"></i>
                          </button>
                          <div class="input-upload text-center">
                            <img src="<%= product.images[i] %>" alt="" />
                            <input
                              id="imageInput<%= i + 1 %>"
                              name="product_images"
                              class="form-control"
                              type="file"
                              accept="image/*"
                              multiple
                            />
                          </div>
                        </div>
                      <% } %>
                      <% } %>
                    </div>
                  </div>
                </div>
                <button
                  type="submit"
                  class="btn btn-md btn-primary rounded font-sm hover-up"
                >
                  Publish
                </button>
                <button
                onclick="goBack()"
                  class="btn btn-md btn-primary rounded font-sm hover-up"
                >
                  Back to Products
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
      <div
        id="toast-container"
        aria-live="polite"
        aria-atomic="true"
        class="position-fixed top-0 end-0 p-3"
        style="z-index: 11"
      >
        <div
          id="toast"
          class="toast align-items-center text-white bg-success border-0"
          role="alert"
          aria-live="assertive"
          aria-atomic="true"
        >
          <div class="d-flex">
            <div id="toast-body" class="toast-body"></div>
            <button
              type="button"
              class="btn-close btn-close-white me-2 m-auto"
              data-bs-dismiss="toast"
              aria-label="Close"
            ></button>
          </div>
        </div>
        <div
          id="toast_error"
          class="toast align-items-center text-white bg-danger border-0"
          role="alert"
          aria-live="assertive"
          aria-atomic="true"
        >
          <div class="d-flex">
            <div id="toast-body-error" class="toast-body"></div>
            <button
              type="button"
              class="btn-close btn-close-white me-2 m-auto"
              data-bs-dismiss="toast"
              aria-label="Close"
            ></button>
          </div>
        </div>
      </div>
      <div class="modal" id="cropModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Crop Image</h5>
            </div>
            <div class="modal-body">
              <div id="croppieContainer"></div>
              <!-- Croppie container -->
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-dismiss="modal"
                id="cancelCropBtn"
              >
                Close
              </button>
              <button type="button" class="btn btn-primary" id="cropImageBtn">
                Crop & Upload
              </button>
            </div>
          </div>
        </div>
      </div>
    </section>
    <%- include('partials/footer') %>
    <script src="/js/product_edit_validation.js"></script>
  </main>
</body>
