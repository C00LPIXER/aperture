<script>
  $(document).ready(function () {
    $("#brandForm").on("submit", function (e) {
      e.preventDefault();

      if (validateForm()) {
        const formData = $(this).serialize();

        $.ajax({
          type: "POST",
          url: "/admin/brands",
          data: formData,
          success: function (response) {
            if (response.success) {
              showToast(response.message);
              $('#brand-list').load('/admin/brands #brand-list');
            } else {
              showToastError(response.message);
            }
          },
          error: function () {
            showToast("An error occurred. Please try again.");
          },
        });
      }
    });
  });

  $(document).ready(() => {
  $(document).on("click", ".brand-unlist",(e) => {
    e.preventDefault();

    const brandId = $(e.currentTarget).data("brand-id");

    $.ajax({
      type: "GET",
      url: `/admin/brands/unlist/${brandId}`,
      success: (response) => {
        console.log(response);
        if (response.success) {
              showToast(response.message);
              $('#brand-list').load('/admin/brands #brand-list');
            } else {
              showToastError(response.message);
            }
      },
      error: function () {
            showToast("An error occurred. Please try again.");
      },
    })
  })
})

$(document).ready(() => {
  $(document).on("click", ".brand-list",(e) => {
    e.preventDefault();

    const brandId = $(e.currentTarget).data("brand-id");

    $.ajax({
      type: "GET",
      url: `/admin/brands/list/${brandId}`,
      success: (response) => {
        console.log(response);
        if (response.success) {
              showToast(response.message);
              $('#brand-list').load('/admin/brands #brand-list');
            } else {
              showToastError(response.message);
            }
      },
      error: function () {
            showToast("An error occurred. Please try again.");
      },
    })
  })
})

  function validateForm() {
    let isValid = true;

    const brand_name = document.getElementById("brand_name");

    if (brand_name.value.trim() === "") {
      displayError(brand_name, "Categoryname is required");
      isValid = false;
    } else {
      clearError(brand_name, "Type here");
    }

    const brand_discreption = document.getElementById(
      "brand_discreption"
    );

    if (brand_discreption.value.trim() === "") {
      displayError(brand_discreption, "Discription is required");
      isValid = false;
    } else {
      clearError(brand_discreption, "Type here");
    }

    return isValid;
  }

  function displayError(inputField, errorMessage) {
    inputField.classList.add("error");
    inputField.value = "";
    inputField.placeholder = errorMessage;
  }

  function clearError(inputField, originalPlaceholder) {
    inputField.classList.remove("error");
    inputField.placeholder = originalPlaceholder;
  }

  function showToast(message) {
    const toastBody = document.getElementById("toast-body");
    toastBody.textContent = message;

    const toastElement = document.getElementById("toast");
    const toast = new bootstrap.Toast(toastElement);
    toast.show();
  }

  function showToastError(message) {
    const toastBody = document.getElementById("toast-body-error");
    toastBody.textContent = message;

    const toastElement = document.getElementById("toast_error");
    const toast = new bootstrap.Toast(toastElement);
    toast.show();
  }

</script>
