    <section class="content-main">
      <div class="content-header">
        <div>
          <h2 class="content-title card-title">Brands</h2>
          <p>Add, edit or delete a Brands</p>
        </div>
        <div>
          <input
            type="text"
            placeholder="Search Categories"
            class="form-control bg-white"
          />
        </div>
      </div>
      <div class="card" id="brand-list">
        <div class="card-body">
          <div class="row">
            <div class="col-md-3">
              <form id="brandForm" action="/brands" method="post">
                <div class="mb-4">
                  <label for="brand_name" class="form-label"
                    >Brands name</label
                  >
                  <input
                    name="name"
                    type="text"
                    placeholder="Type here"
                    class="form-control"
                    id="brand_name"
                  />
                </div>
                <div class="mb-4">
                  <label class="form-label">Description</label>
                  <textarea
                    name="discription"
                    id="brand_discreption"
                    placeholder="Type here"
                    class="form-control"
                  ></textarea>
                </div>
                <div class="d-grid">
                  <button type="submit" class="btn btn-primary">
                    Add Brand
                  </button>
                </div>
              </form>
            </div>
            <div class="col-md-9">
              <div class="table-responsive">
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Description</th>
                      <th>Status</th>
                      <th class="text-end"><span class="me-5">Action</span></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% brands.forEach(brand => { %>
                    <tr>
                      <td><b><%= brand.name %></b></td>
                      <td><%= brand.discription %></td>
                      <td>
                        <% if (brand.is_Active) { %>
                        <span class="badge bg-success w-75">Active</span>
                        <% } else { %>
                        <span class="badge bg-danger w-75">Blocked</span>
                        <% } %>
                      </td>
                      <td class="text-end">
                        <% if (brand.is_Active) { %>
                        <a
                          style="width: 80px"
                          data-brand-id="<%= brand._id %>"
                          class="brand-unlist btn btn-danger btn-sm btn-block"
                        >
                          Unlist
                        </a>
                        <% } else { %>
                        <a
                          style="width: 80px"
                          data-brand-id="<%= brand._id %>"
                          class="brand-list btn btn-warning btn-sm btn-block"
                        >
                          List
                        </a>
                        <% } %>
                        <a class="btn bg-warning-light btn-sm btn-block ms-3 me-3" href="edit_brand">Edit</a>
                      </td>
                    </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
            <!-- .col// -->
          </div>
          <!-- .row // -->
        </div>
        <!-- card body .// -->
      </div>
      <!-- card .// -->
    </section>
    <div
      id="toast-container"
      aria-live="polite"
      aria-atomic="true"
      class="position-fixed top-0 end-0 p-3"
      style="z-index: 11"
    >
      <div
        id="toast"
        class="toast align-items-center text-white bg-success border-0"
        role="alert"
        aria-live="assertive"
        aria-atomic="true"
      >
        <div class="d-flex">
          <div id="toast-body" class="toast-body"></div>
          <button
            type="button"
            class="btn-close btn-close-white me-2 m-auto"
            data-bs-dismiss="toast"
            aria-label="Close"
          ></button>
        </div>
      </div>
      <div
        id="toast_error"
        class="toast align-items-center text-white bg-danger border-0"
        role="alert"
        aria-live="assertive"
        aria-atomic="true"
      >
        <div class="d-flex">
          <div id="toast-body-error" class="toast-body"></div>
          <button
            type="button"
            class="btn-close btn-close-white me-2 m-auto"
            data-bs-dismiss="toast"
            aria-label="Close"
          ></button>
        </div>
      </div>
    </div>
