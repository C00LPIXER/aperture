        <a href="/" class="logo">
          <img src="/images/icons/logo-1.png" alt="IMG-LOGO" />
        </a>

        <!-- Menu desktop -->
        <div class="menu-desktop">
          <ul class="main-menu">
            <li>
              <a href="/">Home</a>
            </li>

            <li>
              <a href="/shop">Shop</a>
